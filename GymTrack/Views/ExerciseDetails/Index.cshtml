@model IEnumerable<GymTrack.Models.ExerciseDetail>

@{
    ViewData["Title"] = "Exercise Details";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise.ExerciseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
                @if (User.Identity.IsAuthenticated)
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciseDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExerciseDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExerciseDetailId">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
